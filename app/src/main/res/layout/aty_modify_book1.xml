<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/player_detial_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_exitbtn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_exit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="点击头像选取球员"
                android:textColor="#FFFF00" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="长按头像拖动布局"
                android:textColor="#FFFF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_savebtn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/footballfield" />

        <com.football.net.widget.CustomViews
            android:id="@+id/id_modify_Custom"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="17dp"
            android:descendantFocusability="blocksDescendants" />
    </RelativeLayout>

    <GridView
        android:id="@+id/id_modify_pos_gridv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="2dp"
        android:numColumns="6"
        android:scrollbars="vertical"
        android:verticalSpacing="2dp" />
</LinearLayout>