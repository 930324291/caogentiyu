<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sign_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.football.net.ui.LoginActivity">
    <include layout="@layout/header_title" />
    <EditText
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="#4e8bbc"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="11"
        android:hint="手机号码"
        android:paddingLeft="10dp"
        android:textColor="#dbe8fd"
        android:textColorHint="#dbe8fd"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#4e8bbc"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:paddingLeft="10dp"
            android:textColor="#dbe8fd"
            android:textColorHint="#dbe8fd"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/verificationBtn"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_btn_bg3"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/txt_7dd9fd"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="#4e8bbc"
        android:gravity="center_vertical"
        android:hint="新密码"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:textColor="#dbe8fd"
        android:textColorHint="#dbe8fd"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_btn_bg2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/txt_042d45"
        android:textSize="18sp" />


</LinearLayout>
