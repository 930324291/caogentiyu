<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chpw_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/header_title"/>


    <EditText
        android:id="@+id/atitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_ebebeb"
        android:gravity="center_vertical"
        android:hint="标题"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/txt_787878"
        android:textSize="12sp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/acontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            android:background="@color/bg_ebebeb"
            android:gravity="top"
            android:hint="招兵买马"
            android:maxLength="1200"
            android:orientation="horizontal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/txt_787878"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wordCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="10dp"
            android:maxLength="1200"
            android:text="0/1200"
            android:textColor="@color/txt_787878"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_bg2"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/txt_042d45"
        android:textSize="18sp" />


</LinearLayout>
