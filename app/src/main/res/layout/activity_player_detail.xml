<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/player_detial_bg">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="100dp"
        android:layout_height="117dp"
        android:layout_above="@+id/layout3"
        android:layout_marginBottom="-18dp"
        android:layout_marginRight="-81dp"
        android:layout_toLeftOf="@+id/layout3"
        android:background="@mipmap/player_detial_1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/teamLogo"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/default_bg" />

                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="皇马"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="内马尔"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/valueView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250万"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="130dp"
        android:layout_height="164dp"
        android:layout_above="@+id/layout3"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-84dp"
        android:layout_toRightOf="@+id/layout3"
        android:background="@mipmap/player_detial_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="战绩"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="胜"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <ProgressBar
                    android:id="@+id/progressbar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="58dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="5dp"
                    android:progressDrawable="@drawable/drawable_progressbar1_1" />

                <TextView
                    android:id="@+id/winNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    tools:text="5"
                    android:textColor="@color/progress_wine_color"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="平"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <ProgressBar
                    android:id="@+id/progressbar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="58dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="5dp"
                    android:progressDrawable="@drawable/drawable_progressbar2_2" />

                <TextView
                    android:id="@+id/drawNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    tools:text="5"
                    android:textColor="@color/progress_draw_color"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="负"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <ProgressBar
                    android:id="@+id/progressbar3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="58dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="5dp"
                    android:progressDrawable="@drawable/drawable_progressbar3_3" />

                <TextView
                    android:id="@+id/loseNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    tools:text="5"
                    android:textColor="@color/progress_lose_color"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/layout3"
        android:layout_width="265dp"
        android:layout_height="265dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/player_detial_header_bg"
        android:paddingBottom="56dp"
        android:paddingLeft="60dp"
        android:paddingRight="49dp"
        android:paddingTop="50dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_bg_circle" />

    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="77dp"
        android:layout_height="180dp"
        android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-24dp"
        android:background="@mipmap/player_detial_4">

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/renqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/txt_f8fb18"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人气排名"
                android:textColor="@color/txt_7dd9fd"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="-45dp"
        android:layout_toRightOf="@+id/layout3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pictureView"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:background="@mipmap/player_detial_5"
            android:padding="10dp"
            android:src="@mipmap/fabu_bifen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="图片/视频"
            android:textColor="@color/txt_7dd9fd"
            android:textSize="10sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="92dp"
        android:layout_height="101dp"
        android:layout_below="@+id/layout3"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="-90dp"
        android:layout_marginTop="-18dp"
        android:clickable="true"
        android:layout_toLeftOf="@+id/layout3"
        android:background="@mipmap/player_detial_3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:background="@drawable/shape_praise_red_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/like_icon" />

            <TextView
                android:id="@+id/likeNumV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>