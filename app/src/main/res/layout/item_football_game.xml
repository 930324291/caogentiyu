<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/teamA_view"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageA"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_circle" />

        <TextView
            android:id="@+id/nameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lines="1"
            android:gravity="center"
            android:text="巴塞罗那"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_centern_view"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamA_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamType"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/people11" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2016-01-11 19:00"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="海布里球场"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bifen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/equaltag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bifen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/lingdang"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/lingdang"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_view3_linear"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/id_centern_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageB"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_circle" />

        <TextView
            android:id="@+id/nameB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="AC米兰"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/id_view3_linear"
        android:layout_alignBottom="@+id/id_centern_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/win"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/gameStatus"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:text="约战中"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12"
            />
    </LinearLayout>

</RelativeLayout>
