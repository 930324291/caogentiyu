<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.football.net.ui.shouye.SquareFragment">

    <include layout="@layout/football_people" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#85b3ce" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <LinearLayout
            android:id="@+id/lin_game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/squate_tab5_selector" />

            <TextView
                android:id="@+id/tv_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="约战"
                android:textColor="@color/tablayout_tab_text_selector"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_recruit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/squate_tab4_selector" />

            <TextView
                android:id="@+id/tv_recruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="找队"
                android:textColor="@color/tablayout_tab_text_selector"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/squate_tab1_selector" />

            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="图片"
                android:textColor="@color/tablayout_tab_text_selector"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/squate_tab2_selector" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="视频"
                android:textColor="@color/tablayout_tab_text_selector"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_team"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/squate_tab3_selector" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="招人"
                android:textColor="@color/tablayout_tab_text_selector"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>


    </LinearLayout>

    <com.football.net.widget.SwipyRefreshLayout
        android:id="@+id/id_order_refresh_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ultimate_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </com.football.net.widget.SwipyRefreshLayout>
</LinearLayout>
