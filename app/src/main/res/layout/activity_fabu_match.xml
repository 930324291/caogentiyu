<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_ebebeb"
        android:gravity="center_vertical"
        android:hint="赛事名称"
        android:text="友谊赛"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/txt_787878"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_ebebeb"
        android:gravity="center_vertical"
        android:hint="比赛地点"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/txt_787878"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/timeV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_ebebeb"
        android:gravity="center_vertical"
        android:hint="比赛时间"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/txt_787878"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/videoDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:background="@color/bg_ebebeb"
            android:gravity="top"
            android:hint="备注信息"
            android:maxLength="1200"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/txt_787878"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wordCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="0/1200"
            android:textColor="@color/txt_042d45"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/select1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/fabu_select_tag_selector"/>
        <TextView
            android:id="@+id/tvselect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发布到广场"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/select2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/fabu_select_tag_selector"/>
        <TextView
            android:id="@+id/tvselect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发布到指定球队"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/teamBName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="约战队伍"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/txt_787878"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_bg2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/txt_042d45"
        android:textSize="18sp" />

    </LinearLayout>
