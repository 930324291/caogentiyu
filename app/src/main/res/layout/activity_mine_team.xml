<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <include layout="@layout/header_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_112d4a">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_duihui"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/video_icon" />

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:paddingTop="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="罗纳尔多"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/teamType"
                        android:layout_width="45dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/member_3" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shenglv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="胜率：80.65%"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_12" />

                    <RelativeLayout
                        android:layout_width="125dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="90dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvwin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="胜" />

                        <TextView
                            android:id="@+id/winNum"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_progressbar_text"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/progress_wine_color" />

                        <ProgressBar
                            android:id="@+id/progressbar1"
                            style="@style/StyleProgressBar1"
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="-4dp"
                            android:layout_toLeftOf="@+id/winNum"
                            android:layout_toRightOf="@+id/tvwin" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/levelV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级：20"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/textsize_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="平" />

                        <TextView
                            android:id="@+id/drawNum"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:background="@drawable/shape_progressbar_text"
                            android:textColor="@color/progress_draw_color"
                            android:text="5" />
                        <ProgressBar
                            android:id="@+id/progressbar2"
                            style="@style/StyleProgressBar2"
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:layout_toRightOf="@+id/tvdraw"
                            android:layout_toLeftOf="@+id/drawNum"
                            android:layout_marginRight="-4dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/peopleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成员：21"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvlose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="负" />

                        <TextView
                            android:id="@+id/loseNum"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:background="@drawable/shape_progressbar_text"
                            android:textColor="@color/progress_lose_color"
                            android:text="5" />
                        <ProgressBar
                            android:id="@+id/progressbar3"
                            style="@style/StyleProgressBar3"
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:layout_toRightOf="@+id/tvlose"
                            android:layout_toLeftOf="@+id/loseNum"
                            android:layout_marginRight="-4dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/archives_icon" />

                <ImageView
                    android:id="@+id/id_yue_zhan_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/match_icon_1" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/bg_112d4a"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="球队成员"
                    android:textColor="@color/white"
                    android:background="@mipmap/qiudui_bg"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/moreMember"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_btn_bg3"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="更多成员"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.football.net.widget.NoScrollGridView
                android:id="@+id/firstnew_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2">

            </com.football.net.widget.NoScrollGridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="球队战绩"
                android:textColor="@color/white"
                android:background="@mipmap/qiudui_bg"
                android:textSize="12sp" />

            <com.football.net.widget.NoScrollListview
                android:id="@+id/firstnews_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.football.net.widget.NoScrollListview>
        </LinearLayout>
    </ScrollView>

</LinearLayout>