<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sign_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.football.net.ui.LoginActivity">


    <ImageView
        android:layout_width="185dp"
        android:layout_height="42dp"
        android:layout_marginTop="84dp"
        android:src="@mipmap/login_image1"/>


        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_btn_bg1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="手机号码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <EditText
            android:id="@+id/verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg1"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="验证码"/>
        <TextView
            android:id="@+id/verificationBtn"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_btn_bg3"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="获取验证码"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_btn_bg1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="用户名"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword"
        android:background="@drawable/login_btn_bg1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="密码"/>



    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_bg2"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/txt_042d45"
        android:text="注册"/>


</LinearLayout>
