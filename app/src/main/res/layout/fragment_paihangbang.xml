<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_header_bg"
        android:gravity="center"
        android:text="排行榜"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_0c1624"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_paihangbang_title_bg">
            <TextView
                android:id="@+id/leftbtn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_paihangbang_tab1"
                android:gravity="center"
                android:text="球队"
                android:textColor="@color/paihangbang_tab1_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wrightbtn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/leftbtn"
                android:background="@drawable/selector_paihangbang_tab2"
                android:gravity="center"
                android:text="球员"
                android:textColor="@color/paihangbang_tab1_text_selector"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bg_042d45"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_paihangbang_tab3"
            android:gravity="center"
            android:text="人气排名"
            android:textColor="@color/paihangbang_tab1_text_selector"
            android:textSize="14sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="@color/bg_7dd9fd" />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_paihangbang_tab3"
            android:gravity="center"
            android:text="身价排名"
            android:textColor="@color/paihangbang_tab1_text_selector"
            android:textSize="14sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="@color/bg_7dd9fd" />

        <TextView
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_paihangbang_tab3"
            android:gravity="center"
            android:text="等级排名"
            android:textColor="@color/paihangbang_tab1_text_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>