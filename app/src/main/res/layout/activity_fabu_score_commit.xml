<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chpw_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.football.net.ui.LoginActivity">

    <include layout="@layout/header_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/timeV"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            tools:text="2017-09-09 12:00"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            tools:text="海布里场地"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/teamNameA"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:text="AC米兰"
            android:textColor="@color/txt_e0e0e0"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/teamImageA"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/teamNameA"
            android:src="@color/ampm_text_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/teamImageA"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进球数"
                android:textColor="@color/txt_e0e0e0"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtract"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/score1"
                    android:layout_width="48dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/add"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@+id/add"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/teamNameB"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:text="AC米兰"
            android:textColor="@color/txt_e0e0e0"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/teamImageB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/teamNameB"
            android:src="@color/ampm_text_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/teamImageB"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进球数"
                android:textColor="@color/txt_e0e0e0"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtract2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/score2"
                    android:layout_width="48dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/add"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@+id/add"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/add2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/bg_ebebeb"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" />




    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_btn_bg2"
        android:gravity="center"
        android:text="比分录入"
        android:textColor="@color/txt_042d45"
        android:textSize="18sp" />
</LinearLayout>
