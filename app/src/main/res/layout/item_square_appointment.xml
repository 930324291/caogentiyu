<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_game"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/teamA_view"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/id_jump_detail_linear">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/default_bg_circle" />

        <TextView
            android:id="@+id/nameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:lines="1"
            android:text="巴塞罗那"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_jump_detail_linear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamA_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamType"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/people11" />

        <TextView
            android:id="@+id/timeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:text="2017-01-01 10:30"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="海布里球场"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="VS"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/teamB_view"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/id_jump_detail_linear"
        android:layout_alignBottom="@+id/id_jump_detail_linear"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_unknow" />

        <TextView
            android:id="@+id/nameB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:lines="1"
            android:text="未知"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/teamB_view"
        android:layout_alignBottom="@+id/id_jump_detail_linear"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fire"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/fire" />

            <TextView
                    android:id="@+id/gameStatus"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/fire"
                    android:lines="1"
                    android:text="约战中"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/answerBtn"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:gravity="center"
            android:text="应战"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

    </LinearLayout>

</RelativeLayout>
