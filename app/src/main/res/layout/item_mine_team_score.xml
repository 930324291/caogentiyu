<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/teamA_view"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageA"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/default_bg_circle" />

        <TextView
            android:id="@+id/teamNameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="巴塞罗那"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centern_view"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamA_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamType"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/people11" />

        <TextView
            android:id="@+id/timeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2016-9-23  19:30"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="海布里球场"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scoreB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="审核发布"
            android:textColor="#ddc957"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scoreA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="本队发布"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/centern_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageB"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/default_bg_circle" />

        <TextView
            android:id="@+id/teamNameB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="AC米兰"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/view3"
        android:layout_alignBottom="@+id/centern_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/win" />

    </LinearLayout>

</RelativeLayout>
