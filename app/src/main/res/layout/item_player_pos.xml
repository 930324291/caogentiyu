<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_player_head_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/add"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/id_remove_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_player_head_img"
        android:layout_alignRight="@+id/id_player_head_img"
        android:gravity="center" />

    <ImageView
        android:id="@+id/id_del_player_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/id_player_head_img"
        android:background="@mipmap/r_clear"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_player_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_player_head_img"
        android:layout_centerHorizontal="true"
        android:text="姓名" />
</RelativeLayout>